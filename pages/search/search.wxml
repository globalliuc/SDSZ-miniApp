<!--search.wxml-->

<view class="container">

  <view  class="logo" >
    <image class="logo_image" src="../../image/novel_icon_shelf.png"  mode="aspectFit"></image>
	  <text class="logo_name">校友信息搜索</text>
  </view>
  
  <view class="search" >
	  <image class="search_logo" src="../../image/novel_new_search_icon.png"/>
	  <input class="search_input" bindblur="bindInputName" placeholder="姓名"/>
  </view>

  <text> \n </text>

  <view class="search" >
	  <image class="search_logo" src="../../image/novel_new_search_icon.png"/>
	  <input class="search_input" bindinput="bindInputCity" value="{{target_city_disp}}" bindFocus="bindFocusStyle" placeholder="所在城市（若列表中没有请英文输入州名）" />
    <scroll-view scroll-y="true" class="scrollview">
      <view wx:for="{{target_city_arr}}">
      <view id="{{item}}" bindtap="itemtap" class="itemview">{{item}}</view>
      </view>
    </scroll-view>
  </view>

  <text> \n </text>

  <view class="search" >
	  <image class="search_logo" src="../../image/novel_new_search_icon.png"/>
	  <input class="search_input" bindblur="bindInputIndustry" bindFocus="bindFocusStyle" placeholder="行业"/>
  </view>

</view>
          
<view class = "section">
  <view class="search_button_area">
    <button type="primary" ontap = "search">搜索</button>
  </view>
</view>
