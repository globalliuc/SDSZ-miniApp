/**search.wxss**/
.container{
  display: flex;
  flex-direction: column;
  height: 80%;
  
}
.logo {
  display: flex;
  position: relative;
  top: -100rpx;
  flex-direction: row;
   height: 3.5rem;
   text-align: left;
   width: 100%;
  
  align-items: flex-start;
  
}

.logo_image {
  width: 100%;
  height: 60%;
  margin: 20rpx;
  margin-right: -214rpx;
  align-items: flex-start;
  position: relative;
  bottom: 10rpx;
  left: -217rpx;
}

.logo_name {
  color: #0a0;
  width: 100%;
  height: 100%;
  position: relative;
  top: 30rpx;
  left: -200rpx;
}

.search{
  width: 100%;
  position: relative;
  height: 2.082rem;
  background-color: #F2F2F2;
}

.search_logo{
  width: 5%;
  height: 1rem;
  background-size: 80%;
  position: absolute;
  margin-left: 10rpx;
  left: 5%;
  right: 5%;
  top: 0.5rem;
  
}

.search_input{
  position: absolute;
  top: 0.3rem;
  left: 5%;
  width: 85%;
  border-radius: 10px;
  border: 1px solid #E1E1E1;
  
  padding-left: 8%;
  font-size: 14px;
  color: #000;
}

.search_button_area{
  margin-top: 50px;
  position: relative;
  padding: 0 30px;
}

.search_button_area button{
  margin-top: 180rpx;
  margin-bottom: 20rpx;
}

.section{
    margin-bottom: 30rpx;
}


.search-history{
  
  position: relative;
  left: 1%;
  right: 1%;
  top: -170rpx;
  padding-left: 3%;
  padding-right: 3%;
  font-size: 12px;
  border: 1px solid darkgray;
  border-radius: 10px;
}

.area {
  position: relative;
  top:-120rpx;
    display:flex;
    flex-direction:row;
    flex:1;
    width: 100%;
    background-color: #fff;
    
}
.bar_logo{
  width: 5%;
  height: 1rem;
  background-size: 80%;
  position: absolute;
  left: 5%;
  right: 5%;
  top: 0.3rem;
}

.line{
  width: 700rpx;
  height: 10rpx;
}

.icon-image{
  width: 50%;
  height: 100rpx;
 
  align-items: flex-start;
  position: relative;
  bottom: 10rpx;
  left: -100rpx;
}

.first-canvas{
  width: 100%;
  height: 3rpx;
}

.sort-list-wrap{
  width:200rpx;
}
.scrollview{
  position: relative;
  height: auto;
  width: 680rpx;
  margin-top: 65rpx;
  margin-left: 50rpx;
  z-index: 2;
  font-size: 14px;
  background-color: #E1E1E1;
  overflow:auto;
  /*border-radius: 10px;*/
}

.itemview{
  padding: 20rpx 0rpx 20rpx 50rpx;
  border-bottom: 1px solid #b1b1b1;
  /*border-radius: 10px;*/
}




