.container{
  display: flex;
  flex-direction: column;
  height: 80%;
  
}
.logo {
  display: flex;
  position: relative;
  top: -100rpx;
  flex-direction: row;
   height: 3.5rem;
   text-align: left;
   width: 100%;
  
  align-items: flex-start;
  
}

.logo_image {
  width: 100%;
  height: 60%;
  margin: 20rpx;
  margin-right: -214rpx;
  align-items: flex-start;
  position: relative;
  bottom: 10rpx;
  left: -217rpx;
}

.logo_name {
  color: #0a0;
  width: 100%;
  height: 100%;
  position: relative;
  top: 30rpx;
  left: -200rpx;
}

.input_field{
  width: 100%;
  position: relative;
  height: 2.082rem;
  background-color: #F2F2F2;
  margin-top: 20rpx;
}

.instruction{
  position: relative;
  font-size: 15px;
  top: -80rpx;
  padding-bottom: -80rpx;
  margin-bottom: -30rpx;
}

.search_input{
  position: relative;
  top: 0.3rem;
  left: 5%;
  width: 85%;
  border-radius: 10px;
  border: 1px solid #E1E1E1;
  padding-left: 3%;
  font-size: 14px;
  color: #000;
}

.submit_button_area{
  position: relative;
  padding: 0 30px;
}

.submit_button_area button{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.section{
  margin-bottom: 30rpx;
}

.selection_field{
  width: 100%;
  position: relative;
  height: 2.082rem;
  background-color: #F2F2F2;
  margin-top: 20rpx;
}

.picker{
  position: relative;
  top: 0.3rem;
  left: 5%;
  width: 85%;
  border-radius: 10px;
  border: 1px solid #E1E1E1;
  padding-left: 3%;
  font-size: 14px;
  color: #000;
  height: 1.2rem;
  padding-top: 6rpx;
}

.scrollview{
  position: relative;
  height: auto;
  width: 680rpx;
  margin-top: 20rpx;
  margin-left: 50rpx;
  z-index: 2;
  font-size: 14px;
  background-color: #E1E1E1;
  overflow:auto;
  /*border-radius: 10px;*/
}

.itemview{
  padding: 20rpx 0rpx 20rpx 50rpx;
  border-bottom: 1px solid #b1b1b1;
  /*border-radius: 10px;*/
}

