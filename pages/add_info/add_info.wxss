/**add_info.wxss**/
.container{
  display: flex;
  flex-direction: column;
  height: 80%;
  
}
.logo {
  display: flex;
  position: relative;
  top: -100rpx;
  flex-direction: row;
   height: 3.5rem;
   text-align: left;
   width: 100%;
  
  align-items: flex-start;
  
}

.logo_image {
  width: 50%;
  height: 60%;
  margin: 20rpx;
  align-items: flex-start;
  position: relative;
  bottom: 10rpx;
  left: -100rpx;
}

.logo_name {
  color: #0a0;
  width: 100%;
  height: 100%;
  position: relative;
  top: 30rpx;
  left: -200rpx;
}

.input_field{
  width: 100%;
  position: relative;
  height: 2.082rem;
  background-color: #F2F2F2;
}

.instruction{
  font-size: 15px;
}

.search_input{
  position: absolute;
  top: 0.3rem;
  left: 5%;
  width: 85%;
  border-radius: 10px;
  border: 1px solid #E1E1E1;
  
  padding-left: 8%;
  font-size: 12px;
  color: #000;
}

.submit_button_area{
  position: relative;
  padding: 0 30px;
}

.submit_button_area button{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.section{
    margin-bottom: 30rpx;
}




